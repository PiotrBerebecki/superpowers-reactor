{
  "name": "superpowers-reactor",
  "version": "1.0.0",
  "description": "Develop superpowers through challenge",
  "main": "src/index.js",
  "repository": "https://github.com/PiotrBerebecki/superpowers-reactor",
  "author": "Piotr Berebecki",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.dev.js",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache",
    "coverage": "jest --coverage",
    "coverage:watch": "jest --coverage --watch",
    "clean-dist": "rimraf dist && mkdir dist",
    "prebuild": "npm run clean-dist",
    "build:dev": "webpack --env=dev --config webpack.config.dev.js",
    "build:prod": "webpack --env=prod --config webpack.config.prod.js",
    "renameForSurge": "mv dist/index.html build/200.html",
    "surge": "surge ./dist --domain superpowers-reactor.surge.sh",
    "deploy": "run-s build:prod renameForSurge surge"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "polished": "^1.1.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-promise": "^0.5.3",
    "redux-saga": "^0.15.3",
    "styled-components": "rc",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.1",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.0.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.1",
    "jest-styled-components": "https://github.com/styled-components/jest-styled-components.git#styled-components-v2",
    "pre-push": "^0.1.1",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.5.4",
    "react-with-styles": "^1.4.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.17.0",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileTransform.js",
      "\\.(css|less)$": "<rootDir>/config/jest/cssTransform.js"
    }
  }
}
